@model StaffViewModel;



@{
    ViewData["Title"] = "Staff";
    Layout = "_Layout";
}

<h1>Staff</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <!----- START THEATRE ----->
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0]!.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0]!.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0]!.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffs[0]!.Code)
            </th>
            <!----- END THEATRE ----->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staffs!)
        {
            <tr>
                <!----- START SCHEDULE ----->
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <!----- END SESSION ----->
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
