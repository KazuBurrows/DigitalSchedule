                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].TimeStart), "Index", new { sortOrder = ViewBag.TimeStartSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].TimeEnd), "Index", new { sortOrder = ViewBag.TimeEndSortParm })
