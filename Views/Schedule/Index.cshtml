                                    <tr>
                                        <form asp-controller="Schedule" asp-action="Index" method="get">
                                        <td>
                                            <input type="text" name="SearchWeek" value="@Model.SearchWeek" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchDay" value="@Model.SearchDay" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchAMPM" value="@Model.SearchAMPM" style="width:100px; height:20px" />
                                        </td>
                                        <td></td>
                                        <td></td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                            <td>
                                                <input type="text" name="SearchTheatreId" value="@Model.SearchTheatreId" style="width:100px; height:20px" />
                                            </td>
                                            }
                                        <td>
                                            <input type="text" name="SearchTheatre" value="@Model.SearchTheatre" style="width:100px; height:20px" />
                                        </td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                            <td>
                                                <input type="text" name="SearchSessionId" value="@Model.SearchSessionId" style="width:100px; height:20px" />
                                            </td>
                                            }
                                        <td>
                                            <input type="text" name="SearchSession" value="@Model.SearchSession" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchFirstName" value="@Model.SearchFirstName" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchLastName" value="@Model.SearchLastName" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchCode" value="@Model.SearchCode" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchSpeciality" value="@Model.SearchSpeciality" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchSubSpeciality" value="@Model.SearchSubSpeciality" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchAnaestheticType" value="@Model.SearchAnaestheticType" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchAcute" value="@Model.SearchAcute" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="text" name="SearchPediatric" value="@Model.SearchPediatric" style="width:100px; height:20px" />
                                        </td>
                                        <td>
                                            <input type="submit" value="Filter" />
                                        </td>
                                        </form>
                                    </tr>

                                
                                @foreach (var item in Model.TheatreSchedule!)
                                {
                                    <tr>
                                        <!----- START SCHEDULE ----->
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Week)</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Day)</p>
                                        </td>
                                        <td>
                                            @{
                                                if (item.IsAm)
                                                {
                                                    <p  class="text-xs font-weight-bold mb-0">AM</p>
                                                }
                                                else
                                                {
                                                    <p class="text-xs font-weight-bold mb-0">PM</p>
                                                }
                                            }
                                        </td>

                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.TimeStart)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.TimeEnd)
                                        </td>
                                        <!----- END SCHEDULE ----->
                                        <!----- START THEATRE ----->
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.TheatreId)
                                            </td>
                                        }
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Theatre.Name)
                                        </td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <p class="text-xs font-weight-bold mb-0"></p>
                                            <!--
                                                <td>
                                            @Html.DisplayFor(modelItem => item.Theatre.Facility)
                                                </td>
                                                <td>
                                            @Html.DisplayFor(modelItem => item.Theatre.ScopeTheatreCode)
                                                </td>
                                                <td>
                                            @Html.DisplayFor(modelItem => item.Theatre.Equipment)
                                                </td>
                                                <td>
                                            @Html.DisplayFor(modelItem => item.Theatre.Specialties)
                                                </td>
                                                <td>
                                            @Html.DisplayFor(modelItem => item.Theatre.Pediatric)
                                                </td>

                                            -->
                                        }
                                        <!----- END THEATRE ----->
                                        <!----- START SESSION ----->
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.SessionId)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.Name)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.Staff.FirstName)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.Staff.LastName)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.Subspecialty.Code)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.Subspecialty.Speciality)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.Subspecialty.SubSpeciality)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.AnaestheticType)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.IsAcute)
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0"></p>@Html.DisplayFor(modelItem => item.Session.IsPediatric)
                                        </td>
                                        <!----- END SESSION ----->
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td class="align-middle">
                                                <a class="text-secondary font-weight-bold text-xs" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                <a class="text-secondary font-weight-bold text-xs" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        }

                                    </tr>
                                }


                            </tbody>
                        </table>

                            @{
                                var prevDisabled = !Model.TheatreSchedule.HasPreviousPage ? "disabled" : "";
                                var nextDisabled = !Model.TheatreSchedule.HasNextPage ? "disabled" : "";
                            }
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageNumber="@(Model.TheatreSchedule.PageIndex - 1)"
                               asp-route-searchWeek="@Model.SearchWeek"
                               asp-route-searchDay="@Model.SearchDay"
                               asp-route-searchAMPM="@Model.SearchAMPM"
                               asp-route-searchTheatreId="@Model.SearchTheatreId"
                               asp-route-searchTheatre="@Model.SearchTheatre"
                               asp-route-searchSessionId="@Model.SearchSessionId"
                               asp-route-searchSession="@Model.SearchSession"
                               asp-route-searchFirstName="@Model.SearchFirstName"
                               asp-route-searchLastName="@Model.SearchLastName"
                               asp-route-searchCode="@Model.SearchCode"
                               asp-route-searchSpeciality="@Model.SearchSpeciality"
                               asp-route-searchSubSpeciality="@Model.SearchSubSpeciality"
                               asp-route-searchAnaestheticType="@Model.SearchAnaestheticType"
                               asp-route-searchAcute="@Model.SearchAcute"
                               asp-route-searchPediatric="@Model.SearchPediatric"
                               class="btn btn-default @prevDisabled">
                                Previous
                            </a>
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageNumber="@(Model.TheatreSchedule.PageIndex + 1)"
                               asp-route-searchWeek="@Model.SearchWeek"
                               asp-route-searchDay="@Model.SearchDay"
                               asp-route-searchAMPM="@Model.SearchAMPM"
                               asp-route-searchTheatreId="@Model.SearchTheatreId"
                               asp-route-searchTheatre="@Model.SearchTheatre"
                               asp-route-searchSessionId="@Model.SearchSessionId"
                               asp-route-searchSession="@Model.SearchSession"
                               asp-route-searchFirstName="@Model.SearchFirstName"
                               asp-route-searchLastName="@Model.SearchLastName"
                               asp-route-searchCode="@Model.SearchCode"
                               asp-route-searchSpeciality="@Model.SearchSpeciality"
                               asp-route-searchSubSpeciality="@Model.SearchSubSpeciality"
                               asp-route-searchAnaestheticType="@Model.SearchAnaestheticType"
                               asp-route-searchAcute="@Model.SearchAcute"
                               asp-route-searchPediatric="@Model.SearchPediatric"
                               class="btn btn-default @nextDisabled">
                                Next
                            </a>
                    </div>
                </div>
            </div>
        </div>



    </div>
    
</div>


