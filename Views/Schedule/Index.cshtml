                            <thead>
                                <tr>
                                    <!----- START SCHEDULE ----->
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Week), "Index", new { sortOrder = ViewBag.WeekSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Day), "Index", new { sortOrder = ViewBag.DaySortParm })
                                    </th>
                                    <th class ="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
