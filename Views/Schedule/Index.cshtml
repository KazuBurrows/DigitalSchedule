                                        </th>
                                    }
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Theatre.Name), "Index", new { sortOrder = ViewBag.TheatreNameSortParm })
                                    </th>
                                    <!----- END THEATRE ----->
                                    <!----- START SESSION ----->
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].SessionId), "Index", new { sortOrder = ViewBag.SessionIdSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.Name), "Index", new { sortOrder = ViewBag.SessionNameSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.Staff.FirstName), "Index", new { sortOrder = ViewBag.FirstNameSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.Staff.LastName), "Index", new { sortOrder = ViewBag.LastNameSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.Subspecialty.Code), "Index", new { sortOrder = ViewBag.CodeSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.Subspecialty.Speciality), "Index", new { sortOrder = ViewBag.SpecialitySortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.Subspecialty.SubSpeciality), "Index", new { sortOrder = ViewBag.SubSpecialitySortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.AnaestheticType), "Index", new { sortOrder = ViewBag.AnaestheticTypeSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.IsAcute), "Index", new { sortOrder = ViewBag.IsAcuteSortParm })
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.ActionLink(Html.DisplayNameFor(model => model.TheatreSchedule![0].Session.IsPediatric), "Index", new { sortOrder = ViewBag.IsPediatricSortParm })
                                    </th>

                                    <!----- END SESSION ----->

                                </tr>
                            </thead>
                            <tbody>
                                <!--
                                    <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="../assets/img/team-2.jpg" class="avatar avatar-sm me-3" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
